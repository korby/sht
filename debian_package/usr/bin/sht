#!/bin/bash
path=`pwd`
confFile=$HOME/sht/sht
function loadCmd {
	idConn=$1
	confLine=`cat $confFile | grep $idConn:`;
	shCmd=`echo $confLine | cut -d":" -f2`
	ssh $shCmd;
}



while getopts lhf: opt
do
    case "$opt" in
      l)  cat $confFile; exit 1; ;;
      h)  echo "usage: $0 shortcut to launch, before you have to fill/create you shortcuts file here: "$confFile" With this syntax for each line : shortcutsName:sshuser@sshhost" ; exit 1; ;;
      \?)		# unknown flag
      	  echo >&2 \
	  "usage: $0 shortcut to launch, before you have to fill/create you shortcuts file here: "$confFile" With this syntax for each line : shortcutsName:sshuser@sshhost"
	  exit 1;;
    esac
done

if test -z "$*" 
then
     cat $confFile;
else
     loadCmd $1
fi




